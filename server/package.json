{
  "name": "gym-cms-server",
  "version": "1.0.0",
  "description": "Express server for Gym CMS with EJS templates",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "prod:start": "cross-env NODE_ENV=production node server.js",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "test": "cross-env  NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest  --runInBand",
    "prettier": "prettier --check .",
    "migrate": "node DB/migrate.js run all",
    "undo-migrate": "node DB/migrate.js undo all"
  },
  "jest": {
    "globalSetup": "./__tests__/setup/jest.global_setup.js",
    "globalTeardown": "./__tests__/setup/jest.global_teardown.js",
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/helper/",
      "<rootDir>/__tests__/setup/"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "busboy": "^1.6.0",
    "ci": "^2.3.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-rate-limit": "^6.11.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "cross-env": "^10.0.0",
    "eslint": "^8.38.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  }
}
